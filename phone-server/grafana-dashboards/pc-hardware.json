    {
      "title": "Temperature History",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 6 },
      "datasource": { "type": "influxdb", "uid": "influxdb" },
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 15,
            "lineWidth": 2,
            "pointSize": 5,
            "showPoints": "auto"
          },
          "color": { "mode": "palette-classic" }
        },
        "overrides": [
          { "matcher": { "id": "byName", "options": "CPU" }, "properties": [{ "id": "color", "value": { "fixedColor": "#FF6384", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "GPU" }, "properties": [{ "id": "color", "value": { "fixedColor": "#36A2EB", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "SSD" }, "properties": [{ "id": "color", "value": { "fixedColor": "#FFCE56", "mode": "fixed" } }] }
        ]
      },
      "targets": [
        {
          "query": "SELECT mean(\"value\") AS \"CPU\" FROM \"hardware_temps\" WHERE \"sensor\" = 'cpu_temp' AND $timeFilter GROUP BY time($__interval) fill(null)",
          "rawQuery": true
        },
        {
          "query": "SELECT mean(\"value\") AS \"GPU\" FROM \"hardware_temps\" WHERE \"sensor\" = 'gpu_temp' AND $timeFilter GROUP BY time($__interval) fill(null)",
          "rawQuery": true
        },
        {
          "query": "SELECT mean(\"value\") AS \"SSD\" FROM \"hardware_temps\" WHERE \"sensor\" = 'disk_temp' AND $timeFilter GROUP BY time($__interval) fill(null)",
          "rawQuery": true
        }
      ]
    },
